{% extends 'base.html.twig' %}

{% block title %}Home Demo{% endblock %}

{% block body %}

<body>

<nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <a class="navbar-brand" href="#">Bilemo API</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="#">Lien API Platform <span class="sr-only">(current)</span></a>
            </li>

        </ul>

        {% if app.user %}
                <li class="nav-item mr-sm-2 inline">Hello {{ user.username }}</li>
                <li class="nav-item inline">
                    <a class="nav-link logout inline" href="{{ path('logout') }}">Log Out</a>
                </li>
        {% else %}

        <form method="post" class="form-inline my-2 my-lg-0"  action="{{ path('home') }}">
            <input class="form-control mr-sm-2 username" id="username" name="username" placeholder="username"
                   required type="text" value="{{ last_username }}">
            <input class="form-control mr-sm-2" type="password"  id="inputPassword" name ="password" placeholder="Password" aria-label="Password" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Connect</button>
        </form>
        {% endif %}
    </div>
</nav>



    <div id="js-hello"></div>
    <br/><br/>
    <div class="content">
        <div class="container">

            <div class="row">
                <div class="data col-lg-8">
                    <h2> Hello Bilemo User</h2>
                    <p> You can use this API if you are <strong>connected</strong> and referenced on database with JWT Token</p>
                    <!-- <p> connect to this space </p> -->

                    <p> API Endpoint </p>
                    <ul>
                        <li>List of Bilemo products : /api/Bilemo/products</li>
                        <li>Detail on product : /api/Bilemo/products/id_product</li>
                        <li>List of API users : /api/Bilemo/users</li>
                        <li>Detail on users : /api/Bilemo/user/id_user</li>
                        <li>Add a new user linked to a customer : /api/Bilemo/users/add</li>
                        <li>Delete a user linked to a customer : /api/Bilemo/users/delete/id_users</li>
                    </ul>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="data col-lg-8">
                    <h4> API Front Demo</h4><br/>
                </div>
            </div>

            <hr>

            <div class="row">
                <div id="js-button-generate"></div>
                <br/><hr><br/>


            <div class="data ">
                <div id="js-form-post"></div>
                <div id="js-response-view"></div>
            </div>

        </div>
    </div>
    </div>
</body>
{% endblock %}
