{% extends 'base.html.twig' %}

{% block title %}Home Demo{% endblock %}

{% block body %}


<nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <a class="navbar-brand blank text-light" href="#">Bilemo API</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link text-light" href="{{ path('api_entrypoint') }}">API Platform <span class="sr-only">(current)</span></a>
            </li>

        </ul>

        {% if app.user %}
                <li class="navbar-brand mr-sm-2 inline text-light">Hello {{ user.username }}</li>
                <li>
                    <a class="navbar-brand logout inline text-info" href="{{ path('logout') }}">Log Out</a>
                </li>
        {% else %}

        <form method="post" class="form-inline my-2 my-lg-0"  action="{{ path('home') }}">
            <input class="form-control mr-sm-2 username" id="username" name="username" placeholder="username"
                   required type="text" value="{{ last_username }}">
            <input class="form-control mr-sm-2" type="password"  id="inputPassword" name ="password" placeholder="Password" aria-label="Password" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Connect</button>
        </form>
        {% endif %}
    </div>
</nav>



    <div id="js-hello"></div>
    <br/><br/>
    <div class="content">
        <div class="container">

            <div class="row">
                <div class="data col-lg-8">
                    <h2 class="text-info"> Hello Bilemo User</h2>
                    <p> You can use this API if you are <strong class="text-success">connected</strong> and referenced on database with JWT Token</p>
                    <!-- <p> connect to this space </p> -->

                    <p> API Endpoint </p>
                    <ul>
                        <li>GET /api/smartphones</li>
                        <li>GET/api/smartphones/{id}</li>
                        <li>POST /api/smartphones</li>
                        <li>POST /api/users</li>
                        <li>GET /api/users/</li>
                        <li>GET /api/users/{id}</li>
                        <li>POST /api/register</li>
                        <li>POST /api/login_check</li>
                        <li>DELETE /api/smartphones/{id}</li>
                        <li>DELETE /api/users/{id}</li>
                        <br/>
                        <a href="{{ path('api_entrypoint') }}" class="btn btn-outline-info" role="button" aria-pressed="true">Try It</a>

                    </ul>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="data col-lg-8">
                    <h4> API Front Demo</h4><br/>
                </div>
            </div>

                <div id="js-button-generate"></div>
                <br/><br/>

        </div>
    </div>
{% endblock %}
